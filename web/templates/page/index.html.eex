                <div class="col-md-8">
			        <h3>Bienvenido {{ guerra.nombreJugador }}</h3>
                </div>

                <div class="col-md-4">
			        <h3>Lista de salas</h3>
                    <ul>
                        <li>1</li>
                        <li>2</li>
                        <li>3</li>
                    </ul>
                </div>
            </div>
