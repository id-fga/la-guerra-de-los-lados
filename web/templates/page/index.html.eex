<form class="form-inline" name="formIngresar" ng-show="formIngresarShow">
	<h2>Nombre</h2>
	<input placeholder="Nombre..." ng-model="guerra.nombreJugador" required>
	<button class="btn btn-success" ng-click="ingresar()" ng-disabled="formIngresar.$invalid">
		Entrar
	</button>
</form>

